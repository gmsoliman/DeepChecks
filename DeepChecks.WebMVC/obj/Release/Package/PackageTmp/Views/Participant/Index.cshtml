@model IEnumerable<DeepChecks.Models.Participant.ParticipantListItem>

@{
    ViewBag.Title = "Index";
}

<div style="background-color:floralwhite;
      border:hidden;
      border-radius:25px;
      padding: 2rem;">

    <h2>Participants</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">

            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ParticipantId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ParticipantId }) |
                    @Html.ActionLink("View Entries", "Index", "Entry", new { id = item.ParticipantId }, null)

                </td>
            </tr>
        }

    </table>
</div>