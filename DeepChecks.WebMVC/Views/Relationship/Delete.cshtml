@model DeepChecks.Models.Relationship.RelationshipListItem

@{
    ViewBag.Title = "Delete";
}

<div style="background-color:floralwhite;
      border:hidden;
      border-radius:25px;
      padding: 2rem;">
    <h2>Delete Relationship</h2>
    <div style="padding:2rem;">
    <h3>Are you sure you want to delete @Html.DisplayFor(model => model.RelationshipName)?</h3>
    <h4>Doing so will delete all Deep Checks, participants, and entries associated with it.</h4>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to My Relationships", "Index")
        </div>
    }
    </div>
</div>
