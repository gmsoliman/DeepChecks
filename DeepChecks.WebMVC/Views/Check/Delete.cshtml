@model DeepChecks.Models.Check.CheckListItem

@{
    ViewBag.Title = "Delete";
}
<div style="background-color:floralwhite;
      border:hidden;
      border-radius:25px;
      padding: 2rem;">

    <h2>Delete Deep Check</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">

            <dt>Name</dt>

            <dd>
                @Html.DisplayFor(model => model.CheckTitle)
            </dd>

            <dt>Date</dt>

            <dd>
                @Html.DisplayFor(model => model.CheckDate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to Deep Checks", "Index", new { id = Model.RelationshipId })
            </div>
        }
    </div>
</div>